datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["dataProxy"]
}

model ChatMessage {
  id          Int      @id @default(autoincrement())
  fromUserId  String
  toUserId    String
  username    String
  avatarUrl   String?
  text        String
  timestamp   DateTime @default(now())
}

model UnreadMessageCount {
  id          Int      @id @default(autoincrement())
  userId      String   // The user who has unread messages (receiver)
  fromUserId  String   // The sender whose messages are unread
  count       Int      @default(0)
  updatedAt   DateTime @updatedAt

  @@unique([userId, fromUserId])  // unique per user-sender pair
}

